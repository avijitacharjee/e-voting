<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".AddVoterActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:elevation="5dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:outlineProvider="bounds"
            android:padding="10dp"
            android:text="Add voters"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@color/white"
            android:elevation="3dp"
            android:orientation="vertical"
            android:outlineProvider="bounds">

            <EditText
                android:id="@+id/name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#05000000"
                android:hint="Name"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/blackLight" />

            <EditText
                android:id="@+id/fathers_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#05000000"
                android:hint="Father's name"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/blackLight" />

            <EditText
                android:id="@+id/mothers_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#05000000"
                android:hint="Mother's name"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/blackLight" />

            <EditText
                android:id="@+id/present_address_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#05000000"
                android:hint="Present Address"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/blackLight" />

            <EditText
                android:id="@+id/permanent_address_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#05000000"
                android:hint="Permanent Address"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/blackLight" />

            <EditText
                android:id="@+id/nid_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#05000000"
                android:hint="NID no."
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/blackLight" />

            <EditText
                android:id="@+id/driving_licence_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#05000000"
                android:hint="Driving Licence"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/blackLight" />

            <EditText
                android:id="@+id/voting_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#05000000"
                android:hint="Voting center no."
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/blackLight" />

            <TextView
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="20dp"
                android:background="#E0E0E0"
                android:fontFamily="monospace"
                android:padding="10dp"
                android:text="Submit"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/progressDialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A0000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Loading...."
            android:textColor="#CAC9D8"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/progress_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/progress_voting_icon" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>