<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".AddVoterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center"
        android:background="@color/white"
        android:elevation="5dp"
        android:outlineProvider="bounds"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="Add voters"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_margin="20dp"
        android:elevation="3dp"
        android:background="@color/white"
        android:outlineProvider="bounds"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/name_edit_text"
            android:hint="Name"
            android:textColor="@color/black"
            android:textColorHint="@color/blackLight"
            android:background="#05000000"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/fathers_name_edit_text"
            android:hint="Father's name"
            android:background="#05000000"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/blackLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/mothers_name_edit_text"
            android:hint="Mother's name"
            android:background="#05000000"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/blackLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/present_address_edit_text"
            android:hint="Present Address"
            android:background="#05000000"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/blackLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/permanent_address_edit_text"
            android:hint="Permanent Address"
            android:background="#05000000"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/blackLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/nid_edit_text"
            android:hint="NID no."
            android:background="#05000000"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/blackLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/driving_licence_edit_text"
            android:hint="Driving Licence"
            android:background="#05000000"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/blackLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="20dp"
            android:background="#E0E0E0"
            android:fontFamily="monospace"
            android:padding="10dp"
            android:text="Submit"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>