<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tf.lite.evoting.detection">

    <uses-sdk />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_voting"
        android:label="@string/tfe_od_app_name"
        android:roundIcon="@mipmap/ic_launcher_voting_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.ObjectDetection"
        android:usesCleartextTraffic="true">
        <activity android:name=".AdminDashboard"></activity>
        <activity android:name=".AdminActivity" />
        <activity android:name=".AdminLoginActivity" />
        <activity android:name=".CandidateInfoActivity" />
        <activity android:name=".DashboardActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetectorActivity"
            android:label="@string/tfe_od_app_name"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>